<h1><%= @doctor.name %></h1>

Department:<h3><%= @doctor.department %></h3><br>

<h3>Appointments:</h3>
<ul>
    <%= @appointments.each do |appointment| %>
    <li><%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
    <li><%= link_to appointment.patient.name, patient_path(appointment.patient) %></li><br>
    <% end %>
</ul>